pcm.!default {
  type asym
   playback.pcm {
     type plug
     slave.pcm "hw:0,0"
   }
   capture.pcm {
     type plug
     slave.pcm "ploop"
   }
}

pcm.cloop {
  type hw
  card Loopback
  device 0
  subdevice 0
  format S16_LE
  rate 16000
  channels 1
}

pcm.STL_playback {
 type plug
 slave.pcm "cloop"
 }

pcm.ploop {
  type hw
  card Loopback
  device 1
  subdevice 0
  format S16_LE
  rate 16000
  channels 1
}

pcm.STL_capture {
 type plug
 slave.pcm "ploop"
 }

pcm_slave.sl3 {
	pcm "hw:1,0"
	format S16_LE
	channels 1
	rate 16000
}

pcm.alsa_playback {
	type plug
	slave sl3
}
